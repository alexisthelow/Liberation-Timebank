package entities;

import java.sql.Timestamp;

import javax.persistence.CascadeType;
import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.FetchType;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.JoinColumn;
import javax.persistence.OneToMany;
import javax.persistence.OneToOne;
import javax.persistence.Table;

import com.fasterxml.jackson.annotation.JsonIgnore;

@Entity
@Table(name = "item_borrow_request_activity")
public class ItemBorrowRequestActivity {

	@Id
	@GeneratedValue(strategy = GenerationType.IDENTITY)
	private int id;
	
	@JsonIgnore
	@JoinColumn(name = "item_borrow_request_id")
	@OneToOne(cascade = CascadeType.PERSIST, fetch = FetchType.EAGER)
	private ItemLoanRequest itemBorrowRequestActivityParent;
	
	@JoinColumn(name = "user_id")
	@OneToMany(cascade = CascadeType.PERSIST, fetch = FetchType.EAGER)
	private User itemBorrowRequestActivityUser;
	
	private String message;
	
	@Column(name = "post_timestamp")
	private Timestamp postTimestamp;
	
	@JsonIgnore
	@Column(name = "last_update")
	private Timestamp lastUpdate;
	
	@JsonIgnore
	@JoinColumn(name = "last_update_user_id")
	private User lastUpdateUser;
	
	@JsonIgnore
	@Column(name = "moderator_hide")
	private Boolean moderatorHide;
	
	@JsonIgnore
	@JoinColumn(name = "hiding_moderator_id")
	private User hidingModerator;

	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public ItemLoanRequest getItemBorrowRequestActivityParent() {
		return itemBorrowRequestActivityParent;
	}

	public void setItemBorrowRequestActivityParent(ItemLoanRequest itemBorrowRequestActivityParent) {
		this.itemBorrowRequestActivityParent = itemBorrowRequestActivityParent;
	}

	public User getItemBorrowRequestActivityUser() {
		return itemBorrowRequestActivityUser;
	}

	public void setItemBorrowRequestActivityUser(User itemBorrowRequestActivityUser) {
		this.itemBorrowRequestActivityUser = itemBorrowRequestActivityUser;
	}

	public String getMessage() {
		return message;
	}

	public void setMessage(String message) {
		this.message = message;
	}

	public Timestamp getPostTimestamp() {
		return postTimestamp;
	}

	public void setPostTimestamp(Timestamp postTimestamp) {
		this.postTimestamp = postTimestamp;
	}

	public Timestamp getLastUpdate() {
		return lastUpdate;
	}

	public void setLastUpdate(Timestamp lastUpdate) {
		this.lastUpdate = lastUpdate;
	}

	public User getLastUpdateUser() {
		return lastUpdateUser;
	}

	public void setLastUpdateUser(User lastUpdateUser) {
		this.lastUpdateUser = lastUpdateUser;
	}

	public Boolean getModeratorHide() {
		return moderatorHide;
	}

	public void setModeratorHide(Boolean moderatorHide) {
		this.moderatorHide = moderatorHide;
	}

	public User getHidingModerator() {
		return hidingModerator;
	}

	public void setHidingModerator(User hidingModerator) {
		this.hidingModerator = hidingModerator;
	}

	@Override
	public int hashCode() {
		final int prime = 31;
		int result = 1;
		result = prime * result + id;
		return result;
	}

	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		ItemLoanRequestActivity other = (ItemLoanRequestActivity) obj;
		if (id != other.id)
			return false;
		return true;
	}

	@Override
	public String toString() {
		StringBuilder builder = new StringBuilder();
		builder.append("ItemBorrowRequestActivity [id=").append(id).append(", message=").append(message)
				.append(", postTimestamp=").append(postTimestamp).append("]");
		return builder.toString();
	}
	
}
