			em.flush();
		}
		catch (Exception e) {
			e.printStackTrace();
		}
		return newItemLoanOffer;
	}

	@Override
	public ItemLoanRequest createItemLoanRequest(int userId, int timebankId, String itemLoanRequestJson) {
		ObjectMapper mapper = new ObjectMapper();
